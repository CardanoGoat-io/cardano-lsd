{
  "name": "cardano-lsd",
  "version": "1.0.1",
  "description": "Reusable cardano frontend components focused on animations. With the whole idea of making everything built on cardano, way more visually appealing. ",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "jsnext:main": "build/index.es.js",
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "make-badges": "istanbul-badges-readme --logo='jest'",
    "lint": "eslint . --ext .ts",
    "all": "npm run build && npm run coverage && npm run make-badges"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CardanoGoat-io/cardano-lsd.git"
  },
  "keywords": [
    "cardano",
    "frontend",
    "animation",
    "react",
    "functional",
    "component"
  ],
  "author": "CardanoGoat.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CardanoGoat-io/cardano-lsd/issues"
  },
  "homepage": "https://github.com/CardanoGoat-io/cardano-lsd#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-eslint": "^8.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest": "^27.4.1",
    "@types/jest-environment-puppeteer": "^5.0.0",
    "@types/puppeteer": "^5.4.5",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "expect-puppeteer": "^6.1.0",
    "istanbul-badges-readme": "^1.8.1",
    "jest": "^27.5.1",
    "jest-environment-node": "^27.5.1",
    "jest-puppeteer": "^6.1.0",
    "puppeteer": "^13.4.1",
    "rollup": "^2.69.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "gsap": "^3.9.1"
  },
  "files": [
    "build"
  ],
  "jest": {
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text",
      "json-summary"
    ],
    "verbose": true,
    "preset": "jest-puppeteer",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    }
  },
  "dependencies": {
    "gsap": "^3.9.1"
  }
}
